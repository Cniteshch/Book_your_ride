<div class="login-form">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-4">
        <div class="well">
          <h3 class="text-center">Sign up</h3>
          <br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% if resource.errors.any? %>
              <div class="alert alert-danger alert-dismissable alert-fixed">
                <%= resource.errors.full_messages.first %>
                <button aria-hidden="true" class="close" data-dismiss="alert" type="button">&times;</button>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.text_field :name, class: 'form-control', placeholder: 'Full Name', autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: 'off' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', autocomplete: 'off' %>
            </div>
            <%= f.submit 'Sign up', class: 'btn btn-success btn-block' %>
          <% end %>
          <div class="links">
            <%= link_to 'Already a member? &#8594;'.html_safe, new_user_session_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
